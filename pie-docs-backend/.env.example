# Database Configuration
DATABASE_URL=postgresql://piedocs:piedocs123@localhost:5434/piedocs

# OpenAI API (for embeddings - optional, can use sentence-transformers instead)
OPENAI_API_KEY=your-openai-api-key-here

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers  # Options: 'openai' or 'sentence-transformers'
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2  # Fast and good quality

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_DOCUMENT=100
SIMILARITY_THRESHOLD=0.7
TOP_K_RESULTS=5

# User Management & Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True

# Session Configuration
SESSION_TIMEOUT_HOURS=24
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
